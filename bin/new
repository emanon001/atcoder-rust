#!/bin/bash -eu

cmd_name="$(basename ${0})"
if [ $# -ne 1 ]; then
  echo "Usage: ${cmd_name} <contest-id>"
  exit 0
fi
contest_id="${1}"
if [ -z "${contest_id}" ]; then
  echo "Usage: ${cmd_name} <contest-id>"
  exit 0
fi

cd "$(dirname ${0})"
cd ..

cargo atcoder new "${contest_id}"
./bin/cp-code-snippets "${contest_id}"
git add "${contest_id}"
git commit -m "cargo atcoder new ${contest_id}"
